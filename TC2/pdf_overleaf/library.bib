doi = {10.1016/j.neucom.2012.06.038},
file = {:home/heitor/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Elias, Kohn - 2013 - Individual and collective properties of computationally efficient motoneuron models of types S and F with active de.pdf:pdf},
isbn = {0925-2312},
issn = {09252312},
journal = {Neurocomputing},
keywords = {Bistability,L-type calcium channel,Motor control,Neuronal network,Plateau potential,Synaptic integration},
pages = {521--533},
title = {{Individual and collective properties of computationally efficient motoneuron models of types S and F with active dendrites}},
