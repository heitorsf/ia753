journal = {Journal of Neurophysiology},
number = {1},
pages = {178--192},
pmid = {26490288},
title = {{Synchronization of motor unit firings: an epiphenomenon of firing rate characteristics not common inputs}},
url = {http://jn.physiology.org/lookup/doi/10.1152/jn.00452.2015},
volume = {115},
